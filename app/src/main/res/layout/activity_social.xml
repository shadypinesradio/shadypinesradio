<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".view.authentication.social.SocialActivity">

    <ImageView
        android:id="@+id/image_back_social"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_backs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_back_social">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_image"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="top|center"
                android:src="@drawable/logo" />


            <TextView
                android:id="@+id/text_createAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/font_sf_pro"
                android:gravity="center"
                android:maxLines="2"
                android:text="Sign in to subscribe to your favorite shows!"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/font_sf_pro"
                android:gravity="center"
                android:maxLines="2"
                android:text="You'll receive a push notification when they're on air."
                android:textColor="#EDE8E8"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_googleSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#BBD0FD"
                android:fontFamily="@font/font_sf_pro"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:padding="12dp"
                android:text="Sign in with Google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_googles"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="@dimen/_24sdp"
                app:iconTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_emailSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#4D4E50"
                android:fontFamily="@font/font_sf_pro"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:padding="12dp"
                android:text="Sign in with Email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_email"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="@dimen/_24sdp"
                app:iconTint="@null" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>