<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/fbutton_color_transparent"
    android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ads_img"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_400sdp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/divider_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_2sdp"
        android:background="#134458"
        android:layout_alignStart="@id/ads_img"
        android:layout_alignEnd="@id/ads_img"
        android:layout_toEndOf="@id/ads_img"

        android:layout_below="@id/ads_img"/>
    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_alignStart="@id/ads_img"
        android:layout_alignEnd="@id/ads_img"
        android:layout_height="@dimen/_45sdp"
        android:background="#68E153"
        android:text="CLOSE"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:layout_below="@id/divider_iv"
        android:gravity="center"
        android:textStyle="bold"
         />


</RelativeLayout>