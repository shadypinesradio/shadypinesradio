<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<!--    <pl.droidsonroids.gif.GifImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:id="@+id/gif_bg"-->
<!--        android:src="@drawable/background" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        android:layout_height="0dp">


        <View
            android:id="@+id/view_days"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:background="@android:color/transparent"
            />

        <LinearLayout
            android:id="@+id/layout_days"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/view_days"
            app:layout_constraintBottom_toBottomOf="@id/view_days"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            >


            <!--Monday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_mon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mon"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_sechdule_days_button"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

            </LinearLayout>

            <!--Tuesday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_tue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tue"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

            </LinearLayout>

            <!--Wednesday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_wed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wed"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

            </LinearLayout>


            <!--Thursday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_thu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Thu"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>


            <!--Friday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_fri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fri"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>


            <!--Saturday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_sat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sat"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>

            <!--Sunday-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_sun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sun"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_schedule"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_days"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:listitem="@layout/item_schedule"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>